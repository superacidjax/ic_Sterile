- content_for :head do
  %meta{:name => "description", :content => "Read and learn more about counseling, therapy and iCouch"}/
  %meta{:name => "keywords", :content => "counseling, ethics, learn, education, therapy, questions, FAQ, online therapy, online counseling, etherapy, therapy styles, psychology methods, reading room, research" }/
  - @title ="The iCouch Lounge"
  %title =@title

%section#static_content
  %header
    %h1 The iCouch Lounge
  %article.copy
    %h2 Here you can read and learn about counseling, iCouch and more!
    %ul
      %li= link_to "About iCouch", about_us_path
      %li= link_to "The iCouch Ethical Code", ethical_code_path
      %li= link_to "Frequently Asked Questions", faqs_path
      %li= link_to "Learn about Online Counseling", about_online_counseling_path
      %li= link_to "How does therapy work?", how_does_therapy_work_path
      %li= link_to "The iCouch Blog", "http://blog.icouch.me"
      %li= link_to "Therapy Styles", therapy_styles_path
      %li= mail_to "client_questions@icouch.me?subject=iCouch: I have a question", "Ask iCouch"
  %form{:action => "http://icouch.createsend.com/t/r/s/gkltuy/", :method => "post"}
    %fieldset
      %h1
        Get our newsletter!
      %dl
        %dt
          %label{:for => "gkltuy-gkltuy"} Enter your email to subscribe to the iCouch wellness newsletter:
        %br
        %dd
          %input{:name => "cm-gkltuy-gkltuy", :size => "30", :type => "text"}
        %br
          %input{:type => "submit", :value => "Subscribe", :class => "button"}
        = render partial: 'shared/privacy'
  %br
  %br

  %feed
    %h1
      iCouch on Twitter
      %script{:charset => "utf-8", :src => "https://widgets.twimg.com/j/2/widget.js"}
      :javascript
        new TWTR.Widget({
          version: 2,
          type: 'profile',
          rpp: 10,
          interval: 15000,
          width: 'auto',
          height: 300,
          theme: {
            shell: {
              background: '#eaf4f6',
              color: '#3f3d32'
            },
            tweets: {
              background: '#eaf4f6',
              color: '#3f3d32',
              links: '#5d939f'
            }
          },
          features: {
            scrollbar: true,
            loop: false,
            live: true,
            behavior: 'all'
          }
        }).render().setUser('iCouchMe').start();
  %hr
